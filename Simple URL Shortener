import random
import string

class URLShortener:
    def __init__(self):
        self.url_map = {}

    def shorten_url(self, long_url):
        short_code = "".join(random.choices(string.ascii_letters + string.digits, k=6))
        self.url_map[short_code] = long_url
        return f"short.url/{short_code}"

    def get_long_url(self, short_code):
        return self.url_map.get(short_code, "URL not found.")

def main():
    shortener = URLShortener()
    while True:
        print("\n1. Shorten URL\n2. Retrieve URL\n3. Exit")
        choice = input("Choose an option: ")
        if choice == "1":
            long_url = input("Enter long URL: ")
            print(f"Shortened URL: {shortener.shorten_url(long_url)}")
        elif choice == "2":
            short_code = input("Enter short code (e.g., abc123): ")
            print(f"Long URL: {shortener.get_long_url(short_code)}")
        elif choice == "3":
            break
        else:
            print("Invalid option.")

if __name__ == "__main__":
    main()
